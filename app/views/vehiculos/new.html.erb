<h1>Crear un nuevo veh√≠culo</h1>

<%= form_with model: @vehiculo, url: vehiculos_path do |form| %>

  <div>
    <%= form.label :rut_cliente %>
    <%= form.text_field :rut_cliente, value: @vehiculo.rut_cliente, readonly: true %>
  </div>

  <div>
    <%= form.label :patente_vehiculo %>
    <%= form.text_field :patente_vehiculo %>
  </div>

  <div>
    <%= form.label :modelo_vehiculo %>
    <%= form.text_field :modelo_vehiculo %>
  </div>

  <div>
    <%= form.label :color_vehiculo %>
    <%= form.text_field :color_vehiculo %>
  </div>

  <div>
    <%= form.submit "Guardar" %>
    <%= link_to "Volver", :back, class: "btn btn-secondary" %>
  </div>
<% end %>
